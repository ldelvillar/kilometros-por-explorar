---
import MetaTags from '@/components/MetaTags.astro';
import Header from '@/components/Header.astro';
import Chatbot from '@/components/Chatbot.tsx';
import CookieBanner from '@/components/CookieBanner.tsx';
import Footer from '@/components/Footer.astro';
import '@/styles/global.css';

interface Props {
  title: string;
  description: string;
  schema?: object;
}

const { title, description, schema } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/images/brand/logo.png" />
    <MetaTags title={title} description={description} schema={schema} />
  </head>
  <body class="font-display">
    <a
      href="#main"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:rounded-lg focus:bg-primary focus:px-4 focus:py-2 focus:text-white focus:outline-none"
    >
      Saltar al contenido
    </a>
    <Header />
    <slot />
    <CookieBanner client:load />
    <Chatbot client:load />
    <Footer />
  </body>
</html>
