---
import { Image } from 'astro:assets';
import type { Destination } from '@/data/destinations';

interface Props {
  destination: Destination;
}

const { destination } = Astro.props;
---

<section class="max-w-7xl mx-auto px-4 pt-8">
  <h1 class="text-3xl font-bold text-gray-800 mb-4">{destination.name}</h1>
  <p class="text-gray-600 mb-8">{destination.longDescription}</p>
  <Image
    src={destination.image}
    alt={`Imagen de ${destination.href.charAt(0).toUpperCase() + destination.href.slice(1)}`}
    class="h-[400px] md:h-[600px] rounded-2xl object-cover w-full"
    width={1200}
    height={600}
    loading="eager"
  />
</section>
