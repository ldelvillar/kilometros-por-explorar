---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

interface Props {
  destination: CollectionEntry<'destinations'>;
  loading?: 'eager' | 'lazy';
}

const { destination, loading = 'lazy' } = Astro.props;
---

<a
  href={`/destinos/${destination.id.replace('.md', '')}`}
  class="group destination-card"
  data-category={destination.data.category}
>
  <article class="space-y-4">
    <Image
      src={destination.data.image}
      alt={destination.data.name}
      class="w-full h-48 object-cover rounded-xl shadow-md group-hover:scale-105 transition-transform duration-300"
      width={400}
      height={300}
      loading={loading}
    />
    <div class="space-y-2">
      <h3 class="text-lg font-medium text-gray-800 destination-name">
        {destination.data.name}
      </h3>
      <p class="text-gray-600 text-sm destination-description">
        {destination.data.shortDescription}
      </p>
    </div>
  </article>
</a>
