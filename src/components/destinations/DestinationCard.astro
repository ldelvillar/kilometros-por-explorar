---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

interface Props {
  destination: CollectionEntry<'destinations'>;
  loading?: 'eager' | 'lazy';
}

const { destination, loading = 'lazy' } = Astro.props;
---

<a
  href={`/destinos/${destination.id.replace('.md', '')}`}
  class="group destination-card"
  data-category={destination.data.category}
>
  <article class="space-y-4">
    <Image
      src={destination.data.image}
      alt={destination.data.name}
      class="h-48 w-full rounded-xl object-cover shadow-md transition-transform duration-300 group-hover:scale-105"
      width={400}
      height={300}
      loading={loading}
    />
    <div class="space-y-2">
      <h3 class="destination-name text-lg font-medium text-gray-800">
        {destination.data.name}
      </h3>
      <p class="destination-description text-sm text-gray-600">
        {destination.data.shortDescription}
      </p>
    </div>
  </article>
</a>
