---
import Magnifier from '@/assets/magnifier.svg';
---

<div class="relative text-gray-700">
  <Magnifier class="size-6 absolute top-3 left-2 text-gray-500" />
  <input
    type="text"
    placeholder="Buscar destinos..."
    class="py-3 pr-4 pl-10 mb-4 w-full bg-gray-100 rounded-md focus:outline-primary"
  />
</div>
<div class="border-b border-gray-200 mb-8">
  <nav class="flex flex-wrap gap-8">
    <button
      class="py-4 border-b-2 border-gray-900 font-bold text-gray-900 text-sm"
    >
      Todos los Destinos
    </button>
    <button
      class="py-4 border-b-2 border-transparent font-bold text-gray-500 hover:text-gray-700 text-sm"
    >
      Viajes Culturales
    </button>
    <button
      class="py-4 border-b-2 border-transparent font-bold text-gray-500 hover:text-gray-700 text-sm"
    >
      Escapadas de Playa
    </button>
    <button
      class="py-4 border-b-2 border-transparent font-bold text-gray-500 hover:text-gray-700 text-sm"
    >
      Naturaleza
    </button>
    <button
      class="py-4 border-b-2 border-transparent font-bold text-gray-500 hover:text-gray-700 text-sm"
    >
      Ciudades Europeas
    </button>
  </nav>
</div>
