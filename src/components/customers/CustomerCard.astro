---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

interface Props {
  customer: CollectionEntry<'customers'>;
  loading?: 'eager' | 'lazy';
}

const { customer, loading } = Astro.props;
---

<a href={`/viajeros/${customer.id.replace('.md', '')}`} class="group">
  <article class="space-y-4">
    <Image
      src={customer.data.image}
      alt={customer.data.name}
      width={600}
      height={400}
      class="h-64 w-full rounded-xl object-cover shadow-md transition-transform duration-300 group-hover:scale-105"
      loading={loading}
    />
    <div class="space-y-2">
      <h3 class="text-lg font-medium text-gray-800">
        {customer.data.name}
      </h3>
      <p class="text-sm text-gray-600">{customer.data.title}</p>
    </div>
  </article>
</a>
