---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import Arrow from '@/assets/arrow.svg';
import HalfArrow from '@/assets/halfArrow.svg';

interface Props {
  customer: CollectionEntry<'customers'>;
  loading?: 'eager' | 'lazy';
}

const { customer, loading } = Astro.props;
---

<article class="group h-full">
  <a
    href={`/viajeros/${customer.id.replace('.md', '')}`}
    class="flex h-full flex-col overflow-hidden bg-white"
  >
    {/* Image Container */}
    <div class="relative h-[420px] overflow-hidden rounded-lg md:h-[475px]">
      <Image
        src={customer.data.image}
        width={600}
        height={400}
        alt={`Historia de Ã©xito de ${customer.data.name}`}
        class="h-full w-full object-cover transition-transform duration-700 ease-out group-hover:scale-110"
        loading={loading}
      />

      {/* Overlay */}
      <div class="absolute inset-0 bg-black/20"></div>

      {/* Company Logo */}
      <div class="absolute top-4 left-4 z-10">
        <div class="rounded-lg bg-white/90 p-2 shadow-lg backdrop-blur-sm">
          <img
            src={customer.data.destinationFlagImage}
            width={80}
            height={40}
            alt={`Bandera de ${customer.data.destination}`}
            class="h-8 w-auto object-contain"
            loading={loading}
          />
        </div>
      </div>

      {/* Company Name Overlay */}
      <div class="absolute bottom-4 left-4 z-10">
        <h3 class="text-lg font-bold text-white lg:text-xl">
          {customer.data.name}
        </h3>
      </div>
    </div>

    {/* Content */}
    <div class="flex flex-1 flex-col pt-8 pb-1">
      <p
        class="mb-6 line-clamp-4 flex-1 text-xl leading-tight font-semibold text-gray-900"
      >
        {customer.data.title}
      </p>

      <div class="text-primary mt-auto flex items-center gap-2 font-semibold">
        <span class="animated-underline relative">Leer caso completo</span>
        <div class="relative size-4">
          <HalfArrow
            class="absolute inset-0 size-4 transition-opacity duration-300 group-hover:opacity-0"
          />
          <Arrow
            class="absolute inset-0 size-4 opacity-0 transition-all duration-300 group-hover:translate-x-1 group-hover:opacity-100"
          />
        </div>
      </div>
    </div>
  </a>
</article>
