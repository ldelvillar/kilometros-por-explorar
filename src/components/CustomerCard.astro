---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

interface Props {
  customer: CollectionEntry<'customers'>;
  loading?: 'eager' | 'lazy';
}

const { customer, loading } = Astro.props;
---

<a href={customer.data.href} class="group">
  <article class="space-y-4">
    <Image
      src={customer.data.image}
      alt={customer.data.name}
      width={600}
      height={400}
      class="w-full h-64 object-cover rounded-xl shadow-md group-hover:scale-105 transition-transform duration-300"
      loading={loading}
    />
    <div class="space-y-2">
      <h3 class="text-lg font-medium text-gray-800">
        {customer.data.name}
      </h3>
      <p class="text-gray-600 text-sm">"{customer.data.testimonial}"</p>
    </div>
  </article>
</a>
