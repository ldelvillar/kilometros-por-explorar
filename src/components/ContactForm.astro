<form class="space-y-6">
  <div class="space-y-2">
    <label for="name" class="text-gray-800 font-medium text-base"
      >Tu Nombre*</label
    >
    <input
      type="text"
      id="name"
      placeholder="Introduce tu nombre"
      required
      class="w-full h-14 px-4 bg-gray-100 rounded-xl border-0 text-gray-600 placeholder-gray-500 focus:outline-primary"
    />
  </div>

  <div class="space-y-2">
    <label for="lastName" class="text-gray-800 font-medium text-base"
      >Tus apellidos</label
    >
    <input
      type="text"
      id="lastName"
      placeholder="Introduce tus apellidos"
      class="w-full h-14 px-4 bg-gray-100 rounded-xl border-0 text-gray-600 placeholder-gray-500 focus:outline-primary"
    />
  </div>

  <div class="space-y-2">
    <label for="email" class="text-gray-800 font-medium text-base"
      >Tu Email*</label
    >
    <input
      type="email"
      id="email"
      placeholder="Introduce tu email"
      required
      class="w-full h-14 px-4 bg-gray-100 rounded-xl border-0 text-gray-600 placeholder-gray-500 focus:outline-primary"
    />
  </div>

  <div class="space-y-2">
    <label for="message" class="text-gray-800 font-medium text-base"
      >Tu mensaje</label
    >
    <textarea
      id="message"
      placeholder="Cuéntanos más sobre tu viaje ideal..."
      class="w-full min-h-36 px-4 py-4 bg-gray-100 rounded-xl border-0 text-gray-600 placeholder-gray-500 focus:outline-primary"
    ></textarea>
  </div>

  <button
    type="submit"
    class="bg-primary text-white font-bold px-4 py-3 rounded-xl hover:bg-primary/90 transition duration-300"
  >
    Enviar Consulta
  </button>
</form>
