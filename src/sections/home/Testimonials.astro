---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import CustomerCard from '@/components/CustomerCard.astro';

const customers: CollectionEntry<'customers'>[] =
  await getCollection('customers');
---

<section class="max-w-7xl mx-auto px-4 py-16">
  <h2 class="text-3xl font-bold text-gray-800 mb-8">Testimonios de Clientes</h2>

  <div class="grid md:grid-cols-3 gap-8">
    {
      customers.map(customer => (
        <CustomerCard customer={customer} loading="lazy" />
      ))
    }
  </div>
</section>
