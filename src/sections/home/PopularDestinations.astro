---
import { Image } from 'astro:assets';
import { getFeaturedDestinations } from '@/data/destinations';

const featuredDestinations = getFeaturedDestinations();
---

<section class="max-w-7xl mx-auto px-4 py-16">
  <h2 class="text-3xl font-bold text-gray-800 mb-8">Destinos Populares</h2>

  <div class="grid md:grid-cols-3 gap-6">
    {
      featuredDestinations.map(destination => (
        <a href={`destinos/${destination.href}`} class="group">
          <article class="space-y-4">
            <Image
              src={destination.image}
              alt={destination.name}
              class="w-full h-48 object-cover rounded-xl shadow-md group-hover:scale-105 transition-transform duration-300"
              width={400}
              height={300}
              loading="lazy"
            />
            <div class="space-y-2">
              <h3 class="text-lg font-medium text-gray-800">
                {destination.name}
              </h3>
              <p class="text-gray-600 text-sm">
                {destination.shortDescription}
              </p>
            </div>
          </article>
        </a>
      ))
    }
  </div>
</section>
