---
import Layout from '@/layouts/Layout.astro';
import Hero from '@/sections/Hero.astro';
import Services from '@/sections/Services.astro';
import PopularDestinations from '@/sections/PopularDestinations.astro';
import Testimonials from '@/sections/Testimonials.astro';
import Faq from '@/sections/Faq.astro';
import Contact from '@/sections/Contact.astro';
import {
  getOrganizationSchema,
  getCombinedSchema,
  getWebPageSchema,
} from '../config/schemas';

const title = 'Planificación Profesional de Viajes - Kilómetros por Explorar';
const description =
  'Planificamos tu viaje de forma profesional y económica. Descubre destinos, itinerarios personalizados a medida y consejos de viaje con nosotros.';
const pathname = Astro.url.pathname;

const pageSchema = getWebPageSchema(title, description, pathname);
const schema = getCombinedSchema(pageSchema);
---

<Layout title={title} description={description} schema={schema}>
  <main>
    <Hero />
    <Services />
    <PopularDestinations />
    <Testimonials />
    <Faq />
    <Contact />
  </main>
</Layout>
